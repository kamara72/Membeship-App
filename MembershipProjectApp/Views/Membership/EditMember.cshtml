@model MembershipProjectApp.Models.MembershipModel

@{
    ViewData["Title"] = "EditMember";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="border p-1">
    <div class="card card-success m-3">
        <div class="card-header">
            <h3 class="card-title">Add new Member</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form asp-controller="Membership" asp-action="EditMember">
                <input type="hidden" asp-for="MemberId" />
                <div class="row border p-1">
                    <h3 class="col-sm-12 mb-3">Basic Informations</h3>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="MiddleName"></label>
                            <input asp-for="MiddleName" class="form-control">
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Ethnicity"></label>
                            <select asp-for="Ethnicity" class="form-control">
                                <option value="">Select...</option>
                                <option value="Mandingo">Mandingo</option>
                                <option value="Bassa">Bassa</option>
                                <option value="Dei">Dei</option>
                                <option value="Gio">Gio</option>
                                <option value="Grebo">Grebo</option>
                                <option value="Lorma">Lorma</option>
                                <option value="Mano">Mano</option>
                                <option value="Gbandi">Gbandi</option>
                                <option value="Mande">Mande</option>
                                <option value="Kissi">Kissi</option>
                                <option value="Kpelle">Kpelle</option>
                                <option value="Sapo">Sapo</option>
                                <option value="Kru">Kru</option>
                                <option value="Krahn">Krahn</option>
                                <option value="Vai">Vai</option>
                                <option value="Others">Others</option>
                            </select>
                            <span asp-validation-for="Ethnicity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Contact"></label>
                            <input asp-for="Contact" class="form-control">
                            <span asp-validation-for="Contact" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Occupation"></label>
                            <input asp-for="Occupation" class="form-control">
                            <span asp-validation-for="Occupation" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Position"></label>
                            <input asp-for="Position" class="form-control">
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row border p-1 mt-2">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Gender"></label> :<br />
                            <ul>
                                <li>
                                    Male: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="Gender" value="Male" />
                                </li>
                                <li>
                                    Female: &nbsp;<input type="radio" asp-for="Gender" value="Female" />
                                </li>
                                <li>
                                    N/A: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="Gender" value="Not Applicable" />
                                </li>
                            </ul>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3 border-left">
                        <div class="form-group">
                            <label asp-for="Category"></label> :<br />
                            <ul>
                                <li>
                                    County: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="Category" value="County" />
                                </li>
                                <li>
                                    Individual: &nbsp;<input type="radio" asp-for="Category" value="Individual" />
                                </li>
                                <li>
                                    Diaspora: &nbsp;&nbsp;<input type="radio" asp-for="Category" value="Diaspora" />
                                </li>
                                <li>
                                    Honorary: &nbsp;<input type="radio" asp-for="Category" value="Honorary" />
                                </li>
                            </ul>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3 border-left">
                        <div class="form-group">
                            <label asp-for="Membership"></label> : <br />
                            <ul>
                                <li>
                                    New Member: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="Membership" value="New Member" />
                                </li>
                                <li>
                                    Existing Member: &nbsp;&nbsp;<input type="radio" asp-for="Membership" value="Existing Member" />
                                </li>
                                <li>
                                    Founding Member: <input type="radio" asp-for="Membership" value="Founding Member" />
                                </li>
                            </ul>
                            <span asp-validation-for="Membership" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3 border-left">
                        <div class="form-group">
                            <label asp-for="MaritalStatus"></label> : <br />
                            <ul>
                                <li>
                                    Single: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="MaritalStatus" value="Single" />
                                </li>
                                <li>
                                    Married: &nbsp;&nbsp;&nbsp;<input type="radio" asp-for="MaritalStatus" value="Married" />
                                </li>
                                <li>
                                    Divorced: &nbsp;<input type="radio" asp-for="MaritalStatus" value="Divorced" />
                                </li>
                                <li>
                                    Widow: &nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="MaritalStatus" value="Widow" />
                                </li>
                                <li>
                                    Widower: &nbsp;<input type="radio" asp-for="MaritalStatus" value="Widower" />
                                </li>
                                <li>
                                    N/A: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" asp-for="MaritalStatus" value="Not Applicable" />
                                </li>
                            </ul>
                            <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row border p-2 mt-2">
                    <h3 class="col-sm-12 mb-3">Background</h3>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="CountyOfOrigin"></label>
                            <select class="form-control" asp-for="CountyOfOrigin">
                                <option value="">Select...</option>
                                <option value="Bong">Bong</option>
                                <option value="Bomi">Bomi</option>
                                <option value="Gbarpolu">Gbarpolu</option>
                                <option value="">Grand Bassa</option>
                                <option value="Grand Bassa">Grand Cape Mount</option>
                                <option value="Grand Gedeh">Grande Gedeh</option>
                                <option value="Grand Kru">Grand Kru</option>
                                <option value="Lofa">Lofa</option>
                                <option value="Margibi">Margibi</option>
                                <option value="Maryland">Maryland</option>
                                <option value="Montserrado">Montserrado</option>
                                <option value="Nimba">Nimba</option>
                                <option value="Rivercess">Rivercess</option>
                                <option value="Rivergee">Rivergee</option>
                                <option value="Sinoe">Sinoe</option>
                                <option value="Others">Others</option>
                            </select>
                            <span asp-validation-for="CountyOfOrigin" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="CountyOfResidence"></label>
                            <select class="form-control" asp-for="CountyOfResidence">
                                <option value="">Select...</option>
                                <option value="Bong">Bong</option>
                                <option value="Bomi">Bomi</option>
                                <option value="Gbarpolu">Gbarpolu</option>
                                <option value="">Grand Bassa</option>
                                <option value="Grand Bassa">Grand Cape Mount</option>
                                <option value="Grand Gedeh">Grande Gedeh</option>
                                <option value="Grand Kru">Grand Kru</option>
                                <option value="Lofa">Lofa</option>
                                <option value="Margibi">Margibi</option>
                                <option value="Maryland">Maryland</option>
                                <option value="Montserrado">Montserrado</option>
                                <option value="Nimba">Nimba</option>
                                <option value="Rivercess">Rivercess</option>
                                <option value="Rivergee">Rivergee</option>
                                <option value="Sinoe">Sinoe</option>
                                <option value="Others">Others</option>
                            </select>
                            <span asp-validation-for="CountyOfResidence" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label asp-for="Education"></label>
                            <select class="form-control" asp-for="Education">
                                <option value="">Select...</option>
                                <option value="Drop out">Drop out</option>=
                                <option value="High School">High School</option>
                                <option value="Undergraduate">Undergraduate</option>
                                <option value="BSc">BSc</option>
                                <option value="Master">Master</option>
                                <option value="PHD">LLB</option>
                                <option value="PHD">PHD</option>
                                <option value="Others">Others</option>
                            </select>
                            <span asp-validation-for="Education" class="text-danger"></span>
                        </div>
                    </div>
