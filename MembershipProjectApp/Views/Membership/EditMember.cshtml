                    <div class="col-sm-4">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="Language"></label>
                            <textarea asp-for="Language" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row border p-2 mt-2">
                    <h3 class="col-sm-12 mb-3">Registration Type</h3>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="PreRegistration"></label>
                            <select class="form-control" asp-for="PreRegistration">
                                <option value="">Select...</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Registration"></label>
                            <select class="form-control" asp-for="Registration">
                                <option value="">Select...</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Person"></label>
                            <select class="form-control" asp-for="Person">
                                <option value="">Select...</option>
                                <option value="Single">Single</option>
                                <option value="Couple">Couple</option>
                                <option value="Family">Family</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="NumberOfPerson"></label>
                            <input asp-for="NumberOfPerson" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row border p-2 mt-2">
                    <h3 class="col-sm-12 mb-3">Payment Informations</h3>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="IDNumber"></label>
                            <input asp-for="IDNumber" class="form-control">
                            <span asp-validation-for="IDNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="ReceiptNumber"></label>
                            <input asp-for="ReceiptNumber" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Payment"></label>
                            <input asp-for="Payment" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label asp-for="Balance"></label>
                            <input asp-for="Balance" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <!-- textarea -->
                        <div class="form-group">
                            <label asp-for="Mosque"></label>
                            <textarea asp-for="Mosque" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Mosque" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row col-6 col-sm-6 mt-3">
                    <div class="col-6">
                        <a asp-controller="Membership" asp-action="MemberList" class="btn btn-secondary form-control"><i class="fas fa-fast-backward"></i> &nbsp; Back</a>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-info form-control"><i class="fas fa-save"></i> &nbsp; Update</button>
                    </div>
                </div>
