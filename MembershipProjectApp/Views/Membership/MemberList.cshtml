@model IEnumerable<MembershipProjectApp.Models.MembershipModel>

@{
    ViewData["Title"] = "Member List";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
    int cnt = 0;
}

<link rel="stylesheet" href="~/dist/css/adminlte.min.css">
<!-- DataTables -->
<link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<div class="border p-1">
    <div class="row p-3">
        <div class="col-6">
            <h4 class="font-weight-bolder">List of Registered Members</h4>
        </div>
        <div class="col-2 text-primary">
            <a asp-controller="Membership" asp-action="PrintPage" class="btn btn-secondary form-control"><i class="fas fa-print"></i>&nbsp; Print Record</a>
        </div>
        <div class="col-2 text-primary">
            <a asp-controller="Membership" asp-action="ExcelPage" class="btn btn-success form-control"><i class="fas fa-file-excel"></i>&nbsp; Export to Excel</a>
        </div>
        <div class="col-2 text-primary">
            <a asp-controller="Membership" asp-action="CreateMember" class="btn btn-primary form-control"><i class="fas fa-plus-circle"></i>&nbsp; Add Member</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            No.
                        </th>
                        <th>
                            Full Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ethnicity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contact)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th class="text-center">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>
                                <span>@String.Format("{0}.", ++cnt)</span>
                            </td>
                            <td>
                                @String.Format("{0} {1} {2}", item.FirstName,item.MiddleName,item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ethnicity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td class="text-center">
                                <a asp-action="MemberDetails" asp-route-id="@item.MemberId" class="text-secondary"><i class="fas fa-info-circle"></i></a> | 
                                <a asp-action="EditMember" asp-route-id="@item.MemberId" class="text-success"><i class="fas fa-edit"></i></a> | 
                                <a asp-action="DeleteMember" asp-route-id="@item.MemberId" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- DataTables  & Plugins -->
<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/plugins/jszip/jszip.min.js"></script>
<script src="~/plugins/pdfmake/pdfmake.min.js"></script>
<script src="~/plugins/pdfmake/vfs_fonts.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>


<!-- Page specific script -->
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
